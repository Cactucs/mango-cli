#!/usr/bin/env node
var pkg = require('../package.json')
var program = require('commander')
// var inquirer = require("inquirer")
var Mango = require('../lib/mango')

program
	.version(pkg.version)

program
	.command('init [path] [name]')
	.description('initialize a new project')
	.option('-s, --source [git_repository]', 'Template repository to fork. Defaults to git@github.com:manGoweb/WordPress-boilerplate.git')
	.action(function init(path, name, options) {
		var mango = new Mango()
		var dir = require('path').resolve(process.cwd(), path || '.')
		var source = options.source || 'git@github.com:manGoweb/WordPress-boilerplate.git'
		mango.init(dir, name, source)
	})


program.parse(process.argv)